<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Barra de búsqueda y switch -->

    <ImageView
        android:id="@+id/imgSearchIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/search_background"
        android:padding="8dp"
        android:src="@drawable/ic_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Banner promocional con overlay -->
    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/search_back"
        android:hint="Buscar seña..."
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColorHint="#888888"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/imgSearchIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgSearchIcon"
        app:layout_constraintTop_toTopOf="@id/imgSearchIcon" />

    <FrameLayout
        android:id="@+id/frameLayoutBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/edtSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner_home_off"
            android:adjustViewBounds="true" />

        <ImageButton
            android:id="@+id/btnTryNow"
            android:layout_width="159dp"
            android:layout_height="46dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/overlayTryNow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_sign_overlay"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgBannerSignIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|start"
            android:layout_margin="8dp"
            android:src="@drawable/ic_sign_overlay"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Título Señas Recientes -->
    <TextView
        android:id="@+id/txtRecentSigns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Señas Recientes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutBanner" />

    <!-- Contenedor horizontal para señas recientes -->

    <TextView
        android:id="@+id/txtRecentSignsExpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text=">"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/txtRecentSigns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtRecentSigns" />

    <HorizontalScrollView
        android:id="@+id/scrollRecentSigns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtRecentSigns">

        <LinearLayout
            android:id="@+id/containerRecentSigns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Pera -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_background"
                    android:padding="12dp"
                    android:src="@drawable/item_pear"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Pera"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/overlayPear"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_sign_overlay"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Sandía -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_background"
                    android:padding="12dp"
                    android:src="@drawable/item_watermelon"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Sandía"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/overlayWatermelon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_sign_overlay"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Tolima -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_background"
                    android:padding="12dp"
                    android:src="@drawable/item_tolima"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Tolima"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/overlayTolima"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_sign_overlay"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Champiñones -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="130dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/item_mushroom"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Champiñón"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/overlayMushroom"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_sign_overlay"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Título Temas -->
    <TextView
        android:id="@+id/txtThemes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Temas"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollRecentSigns" />

    <!-- Contenedor horizontal para temas -->

    <TextView
        android:id="@+id/txtThemesExpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text=">"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/txtThemes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtThemes" />

    <HorizontalScrollView
        android:id="@+id/scrollThemes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtThemes">

        <LinearLayout
            android:id="@+id/containerThemes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Estructura departamental -->
            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:background="@drawable/rounded_corner_background"
                    android:src="@drawable/theme_departments"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="Estructura departamental"
                    android:textAlignment="center"
                    android:textSize="9sp" />

                <!-- Subtítulo en la parte más INFERIOR -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Departamentos y municipios"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/overlayDepartments"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_sign_overlay"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Verduras -->

            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:background="@drawable/rounded_corner_background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/theme_vegetables" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="Comida"
                    android:textAlignment="center"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Verduras"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/overlayVegetables"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_sign_overlay"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Frutas -->

            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="170dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:background="@drawable/rounded_corner_background"
                    android:src="@drawable/theme_fruits"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="Comida"
                    android:textAlignment="center"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Frutas"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/overlayFruits"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_sign_overlay"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:id="@+id/navbarBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_nav_home"
            android:scaleType="centerCrop" />


        <ImageButton
            android:id="@+id/btnVideos"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_nav_videos"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/btnLearn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_nav_learn"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_nav_profile"
            android:scaleType="centerCrop"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>